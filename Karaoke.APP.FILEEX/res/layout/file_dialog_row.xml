<?xml version="1.0" encoding="utf-8"?>
<kr.kymedia.karaoke.view.CheckableSelectableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item_select"
    tools:ignore="ContentDescription,HardcodedText" >

    <ImageView
        android:id="@+id/fdrowimage"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:src="@drawable/file"
        android:visibility="visible" />

    <TextView
        android:id="@+id/fdrowtext"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/fdrowimage"
        android:layout_alignTop="@+id/fdrowimage"
        android:layout_toLeftOf="@+id/fdrowcheck"
        android:layout_toRightOf="@+id/fdrowimage"
        android:focusable="false"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="file~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/fdrowcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_grid_file_drawable"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:visibility="visible" />

</kr.kymedia.karaoke.view.CheckableSelectableRelativeLayout>