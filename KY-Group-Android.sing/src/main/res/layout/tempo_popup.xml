<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.andexert.library.RippleView
            android:id="@+id/left_arrow_button_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_centered="true"
            app:rv_color="@android:color/white"
            app:rv_rippleDuration="100">

            <ImageView
                android:id="@+id/left_arrow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:rotation="180"
                android:src="@drawable/ic_right_arrow" />
        </com.andexert.library.RippleView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

             <!--dsjung add bubbleseekbar-->
            <kr.keumyoung.bubbleseekbar.BubbleSeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_second_track_color="@color/seek_color_track2"
                app:bsb_bubble_text_color="@color/seek_color_bubble_text"
                app:bsb_section_count="8"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                app:bsb_min="-4"
                app:bsb_max="4"
                app:bsb_touch_to_seek="true"
                app:bsb_cts="true"
                app:bsb_cts_string="@string/tempo_default"
                app:bsb_track_color="@color/seek_color_track1"/>

            <!--<SeekBar-->
                <!--android:id="@+id/seekbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:max="12"-->
                <!--android:progress="6"-->
                <!--android:progressDrawable="@drawable/seekbar_style"-->
                <!--android:splitTrack="false"-->
                <!--android:thumb="@drawable/play_bar_thumb"-->
                <!--android:thumbOffset="0dp" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/seekbar_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10x"
                    android:textColor="@color/play_bar_text"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:typeface="sans"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/seek_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0x"
                    android:textColor="@color/play_bar_text"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:typeface="sans"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/seek_bar_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="+10x"
                    android:textColor="@color/play_bar_text"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:typeface="sans"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <com.andexert.library.RippleView
            android:id="@+id/right_arrow_button_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_centered="true"
            app:rv_color="@android:color/white"
            app:rv_rippleDuration="100">

            <ImageView
                android:id="@+id/right_arrow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right_arrow" />
        </com.andexert.library.RippleView>


    </LinearLayout>

</LinearLayout>