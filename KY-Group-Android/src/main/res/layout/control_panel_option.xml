<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_anchor_ripple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rv_centered="true"
    app:rv_color="@android:color/white"
    app:rv_rippleDuration="100">

    <LinearLayout
        android:id="@+id/item_anchor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/effect_off_icon" />

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/effects"
            android:typeface="sans"
            android:textColor="@color/fifty_white"
            android:textSize="10sp" />
    </LinearLayout>
</com.andexert.library.RippleView>