<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.andexert.library.RippleView
            android:id="@+id/left_arrow_button_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_centered="true"
            app:rv_color="@android:color/white"
            app:rv_rippleDuration="100">

            <ImageView
                android:id="@+id/left_arrow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:rotation="180"
                android:src="@drawable/ic_right_arrow" />
        </com.andexert.library.RippleView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="12"
                android:progress="6"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:thumb="@drawable/play_bar_thumb"
                android:thumbOffset="0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/seekbar_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10x"
                    android:textColor="@color/play_bar_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/seek_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0x"
                    android:textColor="@color/play_bar_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/seek_bar_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="+10x"
                    android:textColor="@color/play_bar_text"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <com.andexert.library.RippleView
            android:id="@+id/right_arrow_button_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_centered="true"
            app:rv_color="@android:color/white"
            app:rv_rippleDuration="100">

            <ImageView
                android:id="@+id/right_arrow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right_arrow" />
        </com.andexert.library.RippleView>


    </LinearLayout>

</LinearLayout>